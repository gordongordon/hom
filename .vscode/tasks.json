    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "process",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/t:build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            
            "problemMatcher": "$msCompile" 
        },
        {
            "type": "npm",
            "script": "start",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}